            app:layout_constraintStart_toStartOf="@id/text_address_part_1"
            app:layout_constraintTop_toBottomOf="@id/text_address_part_1"
            app:layout_constraintBottom_toTopOf="@+id/text_address_part_7" />
        <TextView
